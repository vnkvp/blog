<html>

<head>
    <title>vnkvpistvn</title>
    <link href="https://fonts.googleapis.com/css?family=IM+Fell+English&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script type="text/javascript" src="/javascripts/custom.js"></script>
</head>

<body>

    <nav>
        <div class="logo">
            <h4>vnkvpistvn.</h4>
        </div>
        <ul class="links">
            <li><a href="/">Home</a></li>
            <li><a href="/posts/add">Add Post</a></li>
            <li><a href="/categories/add">Add Category</a></li>
        </ul>
        <div class="burguer">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
        </div>
    </nav>
    <div class="container">
            <div class="posts">
            <% if (posts) { %>
            <% for (var i = 0; i < posts.length; i++) { %>
            <a href="/posts/show/<%= posts[i]._id %>">
                <h3><%= posts[i].title %></h3>
            </a>
            <h5 class="meta"> Postado em <%= posts[i].category %> por <%= posts[i].author %></h5>
            <span class="date"><%= moment(posts[i].date).format('DD/MM/YYYY') %></span>
            <p class="body"><%= posts[i].body %></p>
            <a href="/posts/show/<%= posts[i]._id %>" class="more">Leia Mais</a>
            <% } %>
            <% } %>
    </div> 
        <div class="ads">
                <p>ad</p>
            </div>
    </div>
</body>
<footer>
    <p>vnkvpistvn &copy; 2019</p>
</footer>

</html>